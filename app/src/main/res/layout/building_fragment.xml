<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/frameLayout2"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragments.building.BuildingFragment">

    <!-- TODO: Update blank fragment layout -->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0">


        <TextView
            android:id="@+id/buildingTextView"
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:layout_weight="1"
            android:text="Building infos"
            android:textSize="18sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_weight="1">

            <TextView
                android:id="@+id/heightTextView"
                android:layout_width="20dp"
                android:layout_height="50dp"
                android:layout_weight="1"
                android:enabled="false"
                android:text="Height" />

            <EditText
                android:id="@+id/heightEditText"
                android:layout_width="20dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:enabled="false"
                android:inputType="number"
                android:text="8 meters" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp">

            <TextView
                android:id="@+id/widthTextView"
                android:layout_width="20dp"
                android:layout_height="50dp"
                android:layout_weight="1"
                android:enabled="false"
                android:text="Width" />

            <EditText
                android:id="@+id/widthEditText"
                android:layout_width="20dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:enabled="false"
                android:inputType="number"
                android:text="8 meters" />


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_weight="1">

            <TextView
                android:id="@+id/gridSizeTextView"
                android:layout_width="20dp"
                android:layout_height="50dp"
                android:layout_weight="1"
                android:enabled="false"
                android:text="Grid Size" />

            <EditText
                android:id="@+id/gridSizeEditText"
                android:layout_width="20dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:enabled="false"
                android:inputType="number"
                android:text="1 meter" />


        </LinearLayout>

        <CheckBox android:id="@+id/checkboxScan"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:text="Offline Scan Presence"
            android:enabled="false"
            />

    </LinearLayout>

</android.support.constraint.ConstraintLayout>