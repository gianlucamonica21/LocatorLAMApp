<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.locate.LocateActivity"
    android:id="@+id/constraintLayout">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="160dp"
        android:layout_marginBottom="1dp"
        android:layout_marginEnd="5dp"
        android:layout_marginStart="5dp"
        android:layout_marginTop="350dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/actualGridTextView"
                android:layout_width="153dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="Actual position"
                tools:layout_editor_absoluteY="427dp" />

            <EditText
                android:id="@+id/actualGridEditText"
                android:layout_width="153dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:ems="10"
                android:hint="0"
                android:inputType="number"
                tools:layout_editor_absoluteX="211dp"
                tools:layout_editor_absoluteY="452dp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/estimateGridTextView"
                android:layout_width="153dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="Estimated position"
                tools:layout_editor_absoluteX="20dp" />

            <EditText
                android:id="@+id/estimateGridEditText"
                android:layout_width="153dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:ems="10"
                android:hint="0"
                android:inputType="number"
                tools:layout_editor_absoluteX="211dp" />

        </LinearLayout>
    </LinearLayout>

</android.support.constraint.ConstraintLayout>